	public void printHeight(int classNo) {
		ArrayList<ArrayList<Integer>> list = new ArrayList<>();
		setData(list);
		for(int i=0;i<list.size();i++) {
			System.out.println("Class No : "+i);
			for(int j=0;j<list.size();j++) {
				System.out.println(list.get(j));
			}
